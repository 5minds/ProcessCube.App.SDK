{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "workarounds:all"],
  "schedule": ["* 0-7 1 * *"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "reviewers": ["alexanderkasten"],
  "ignoreDeps": [
    "@5minds/processcube_engine_sdk",
    "@5minds/processcube_engine_client"
  ],
  "packageRules": [
    {
      "groupName": "Minor and Patch Type Updates",
      "groupSlug": "types-minor",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/@types/*/"]
    },
    {
      "groupName": "Prettier",
      "groupSlug": "prettier",
      "automerge": true,
      "matchPackageNames": [
        "/prettier/",
        "/@trivago/prettier-plugin-sort-imports/",
        "/prettier-plugin-tailwindcss/"
      ]
    },
    {
      "groupName": "Typescript",
      "groupSlug": "typescript",
      "automerge": true,
      "matchPackageNames": ["/typescript/"]
    }
  ]
}
